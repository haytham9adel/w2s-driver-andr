<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginEnd="10dip"
        android:layout_marginTop="20dip"
        android:layout_weight="1"
        android:background="@drawable/relative_back"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/relLayPresent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/green"
                android:drawableStart="@drawable/green"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:text="@string/total_present"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/present_days_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:text=""
                android:textColor="#222222" />

            <View
                android:id="@+id/view01"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#DDDDDD"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayWaiting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/yellow"
                android:drawableStart="@drawable/yellow"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:text="@string/total_waiting"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/student_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:text=""
                android:textColor="#222222" />

            <View
                android:id="@+id/view011"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#DDDDDD"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayAbsent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/red"
                android:drawableStart="@drawable/red"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:text="@string/total_absent"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/absent_days_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:text=""
                android:textColor="#222222" />

            <View
                android:id="@+id/view00"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#DDDDDD"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayTotal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/selected_grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/blue"
                android:drawableStart="@drawable/blue"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:text="@string/total_student"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/student_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:text=""
                android:textColor="#222222" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ListView
            android:id="@+id/student_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

        </ListView>

    </LinearLayout>

</LinearLayout>