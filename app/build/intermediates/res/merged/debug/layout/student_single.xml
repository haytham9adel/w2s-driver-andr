<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/no_txt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/number_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="#232323"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/setPresent"
            android:layout_toStartOf="@+id/setPresent"
            android:layout_toRightOf="@+id/no_txt"
            android:layout_toEndOf="@+id/no_txt"
            android:gravity="center_vertical"
            android:textDirection="locale"
            android:padding="3dp"
            android:text="john"
            android:textColor="#232323" />

        <ImageView
            android:id="@+id/call_parent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/status_student"
            android:layout_toStartOf="@+id/status_student"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/send_notification"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/call_parent"
            android:layout_toStartOf="@+id/call_parent"
            android:src="@drawable/send_notification" />

        <ImageView
            android:id="@+id/setAbsent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/send_notification"
            android:layout_toStartOf="@+id/send_notification"
            android:src="@drawable/abs" />

        <ImageView
            android:id="@+id/setPresent"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/setAbsent"
            android:layout_toStartOf="@+id/setAbsent"
            android:src="@drawable/green_dot"
            android:visibility="gone" />

        <TextView
            android:id="@+id/status_student"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/red_border"
            android:drawableLeft="@drawable/red_dot"
            android:drawableStart="@drawable/red_dot"
            android:drawablePadding="2dp"
            android:gravity="center_vertical|center"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="6dp"
            android:paddingEnd="6dp"
            android:text="CheckOut"
            android:textColor="#232323" />
    </RelativeLayout>

</LinearLayout>